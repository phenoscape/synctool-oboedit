<?xml version="1.0"?>

<project name="synchronization tool" default="compile" basedir=".">
	<description>synchronization tool ant build</description>
	<property name="src" value="src"/>
	<property name="classfiles" value="bin"/>
	<property name="lib" value="lib"/>
	<property name="build_only_libs_folder" value="${lib}/build"/>
	<property name="jarfile" value="synchtool.jar"/>
	
    <path id="classpath">
        <fileset dir="${lib}">
            <include name="*.jar"/>
        	<include name="build/*.jar"/>
        </fileset>
    </path>
	
	<target name="compile">
		<mkdir dir="${classfiles}"/>
	    <javac srcdir="${src}" destdir="${classfiles}">
	        <classpath refid="classpath"/>
	    </javac>
	</target>
	
    <target name="jar" depends="compile">
        <jar destfile="${jarfile}">
            <fileset dir="${classfiles}"/>
        	<fileset dir="." includes="lib/*.jar"/>
        </jar>
    </target>
	
    <target name="clean">
        <delete dir="${classfiles}"/>
        <delete file="${jarfile}"/>
    </target>
	
</project>